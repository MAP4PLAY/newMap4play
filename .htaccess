# .htaccess - Segurança Básica

# Bloquear acesso a arquivos sensíveis
<Files ~ "\.(env|config|sql|log)$">
    Order allow,deny
    Deny from all
</Files>

# Proteger arquivos PHP na pasta includes/
<FilesMatch "\.(php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Prevenir acesso ao .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript
</IfModule>